<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./style.css">
    <script src="https://kit.fontawesome.com/a515e8050c.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <i class="fa-solid fa-toggle-large-on"></i>
        <div class="header">
            <form class="weather-search">
                <input type="text" name="" class="searchinput" placeholder="Enter City">
                <button class="searchbtn">Search</button>
            </form>
            <div class="dropdown">
                <p id="dropdownText"></p>
            </div>
        </div>
        <div class="weather-body">
            <h1 class="city"><%= dynamicData.city %> <%= dynamicData.country %> </h1>
            <div class="weather-datetime">
                <p><%= dynamicData.dateTime %> </p>
            </div>

            <div class="forecast">
                <p><%= dynamicData.forecast %></p>
            </div>
            <div class="weather-icon">
                <img src="<%=dynamicData.weathericon %>" alt="">
            </div>
            <p class="temp"><%= dynamicData.temperature %> °C</p>

            <hr>

            <div class="weather-info">
                <div class="weather-card">
                    <i class="fa-solid fa-temperature-full"></i>
                    <div>
                        <p>Real feel</p>
                        <p class="feel"><%= dynamicData.feel %> °C</p>
                    </div>
                </div>

                <div class="weather-card">
                    <i class="fa-solid fa-droplet"></i>
                    <div>
                        <p>Humidity</p>
                        <p class="humidity"><%= dynamicData.humidity %>%</p>
                    </div>
                </div>

                <div class="weather-card">
                    <i class="fa-solid fa-wind"></i>
                    <div>
                        <p>Wind</p>
                        <p class="wind"><%= dynamicData.wind %>m/s</p>
                    </div>
                </div>

                <div class="weather-card">
                    <i class="fa-solid fa-gauge-high"></i>
                    <div>
                        <p>Pressure</p>
                        <p class="pressure"><%= dynamicData.pressure %> hPa</p>
                    </div>
                </div>
            </div>

            <div class="fulldetails">
                <% dynamicData.threeDaysForecast.forEach((forecast) => {%>
                        <div class="card">
                            <div class="Mon"><%= dynamicData.getWeekDayFromDate(forecast.date) %></div>
                            <div class="icon"> <img src = "https:<%= forecast.day.condition.icon %>"/>
                            </div>
                            <div class="temperature"><%= Math.round(forecast.day.avgtemp_c) %>°C</div>
                        </div>
                  <% })%>
            </div>
        </div>
    </div>
</body>

<script src="./shared.js"></script>

<script src="/index.js"></script>

</html>